<h1>Write a Review</h1>


<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |m| %>
        <%= m %>
    <%end%>
<%end%>

<%= form_for @review do |f| %>
    <%= f.label :dive_bar_id %>
    <%= f.collection_select(:dive_bar_id, DiveBar.all, :id, :name) %>
    <%= f.label :user_id %>
    <%= f.collection_select(:user_id, User.all, :id, :name) %>
    <%= f.label :rating %>
    <%= f.select :rating, (1..10) %>
    <%= f.label :review %>
    <%= f.text_field :review %>
    <%= f.submit %>
    <%end%>