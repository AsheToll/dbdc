<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |m| %>
        <%= m %>
    <%end%>
<%end%>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label "Favorite Genre" %>
    <%= f.text_field :fav_genre %>
    <%= f.label :neighborhood %>
    <%= f.collection_select :neighborhood, Neighborhood.all, :name, :name %>
    <%= f.submit %>
<%end%>