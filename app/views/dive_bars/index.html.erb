<h1>Dive Bars</h1>

<%= form_tag(dive_bars_path, method: "get") do %>
    <%= label_tag(:q, "Search By Neighborhood") %>
    <%= text_field_tag(:q, params[:q]) %>
    <%= submit_tag("Search") %>
<% end %>

<ul>
    <% @dive_bars.each do |db| %>
        <li><%= link_to db.name.titleize, dive_bar_path(db) %></li>
       Located in <%= db.neighborhood.name.titleize %>
        <% rating = db.reviews.map do |review| %>
            <% review.rating %>
         <% end %>
         <div>Average Rating: <%= average = rating.sum / rating.size.to_f %> /10 Stars</div><br>
    <% end %>
</ul>




